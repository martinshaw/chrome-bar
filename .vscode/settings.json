{
  // @see https://github.com/martinshaw/dotfiles-for-new-projects

  // For the 'Power Header' extension

  "[php]": {
    "powerHeader.template": "<?php\\n/**\\n * All Rights Reserved, (c) $CURRENT_YEAR <company>\\n * \\n * Author: <author> (<email>)\\n * File Name: $TM_FILENAME\\n * Created:  !created_date!\\n * Modified: !modified_date!\\n * \\n * Description: ${1:description}\\n */\\n",
    "powerHeader.commentMode": "raw",
    "powerHeader.update.enable": "save"
  },
  "powerHeader.autoInsert.enable": true,
  "powerHeader.autoInsert.allow": "none",
  "powerHeader.autoInsert.languages": [
    "plaintext",
    "Log",
    "php",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "powerHeader.commentMode": "block",
  "powerHeader.newLines": 1,
  "powerHeader.template": "\\nAll Rights Reserved, (c) $CURRENT_YEAR <company>\\n\\nAuthor: <author> (<email>)\\nFile Name: $TM_FILENAME\\nCreated:  !created_date!\\nModified: !modified_date!\\n\\nDescription: ${1:description}\\n",
  "powerHeader.variables": [
    // Update these variables to your own details

    "<author>='Martin Shaw'",
    "<email>=\"developer@martinshaw.co\"",
    "<company>='CodeAtlas LTD.'",
    "!created_date!=new Date().toISOString()",
    "!modified_date!=new Date().toISOString()"
  ],
  "powerHeader.update.enable": "manual",
  "powerHeader.update.content": ["Modified:\\s+(.+)=!modified_date!"],

  // Formatting using the 'Prettier' extension

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Others

  "git.autofetch": true,
  "extensions.ignoreRecommendations": false,
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": true
}
